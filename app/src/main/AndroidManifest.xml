<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gondai.alcchallengeapp.one">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lancher_andela"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lancher_andela"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
                android:screenOrientation="portrait"
            android:name=".AboutALCActivity"
            android:label="@string/title_activity_about_alc"
            >
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".ProfileALCActivity"
                  android:label="@string/title_activity_my_profile"
        >
        </activity>
        <activity android:name=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>