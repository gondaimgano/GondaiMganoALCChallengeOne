<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="ALCChallenge">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ALCChallenge.TextBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ALCChallenge.Headline">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>

        <item name="android:textSize">30sp</item>
    </style>
    <style name="ALCButtonTextMedium">


     <item name="materialButtonStyle">
         @style/Widget.MaterialComponents.Button
     </item>

    </style>

</resources>
